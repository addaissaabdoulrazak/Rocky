@model IEnumerable<Rocky.Models.ApplicationType>
<br />
<!--Le premier Div est un Div general Pour tout le Construction-->
<div class="container pt-0 mt-0">
    <!--le second Div utilise Row pour afficher les element sur la meme Ligne-->
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Application Type List
            </a>
        </div>
    </div>

    <br /><br /><br />

    <!--nous allons aficher Notre Tableau de Données A ce Niveau-->
    <!--IMPORTANT : LE Table N'existe Que si notre Db possède des Enregistrement Donc faudrait appliquer une Condition-->
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>           
                        <td>
                            <div class="w75 btn-group" role="group">
                                @* mx-2 definit les marge pour le left et right *@
                                <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-success mx-2">
                                    <i class="fas fa-edit"></i> &nbsp; Edit
                                </a>
                                <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash"></i> &nbsp;  Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }



            </tbody>
        </table>
    }
    else
    {

        <p>Category no exist</p>

    }

